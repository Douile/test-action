{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "Node16",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "newLine": "lf",
    "outDir": "./lib",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
  },
  "exclude": [
    "./__mocks__/**/*",
    "./__tests__/**/*",
    "./lib/**/*",
    "node_modules",
    "jest.config*.ts"
  ]
}
